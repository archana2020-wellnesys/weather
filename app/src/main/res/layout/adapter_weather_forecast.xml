<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80_dp"
        android:layout_margin="@dimen/dimen_16_dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_weather_day_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/opacity_temp_color_black"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/temp_color_black"
            android:textSize="@dimen/dimen_16_sp"
            tools:text="Tuesday" />

        <TextView
            android:id="@+id/tv_weather_temp_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/opacity_temp_color_black"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/temp_color_black"
            android:textSize="@dimen/dimen_16_sp"
            tools:text="24 C" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80_dp"
        android:layout_margin="@dimen/dimen_16_dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_weather_day_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/opacity_temp_color_black"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/temp_color_black"
            android:textSize="@dimen/dimen_16_sp"
            tools:text="Wednesday" />

        <TextView
            android:id="@+id/tv_weather_temp_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/opacity_temp_color_black"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/temp_color_black"
            android:textSize="@dimen/dimen_16_sp"
            tools:text="24 C" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80_dp"
        android:layout_margin="@dimen/dimen_16_dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_weather_day_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/opacity_temp_color_black"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/temp_color_black"
            android:textSize="@dimen/dimen_16_sp"
            tools:text="Thursday" />

        <TextView
            android:id="@+id/tv_weather_temp_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/opacity_temp_color_black"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/temp_color_black"
            android:textSize="@dimen/dimen_16_sp"
            tools:text="24 C" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80_dp"
        android:layout_margin="@dimen/dimen_16_dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_weather_day_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/opacity_temp_color_black"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/temp_color_black"
            android:textSize="@dimen/dimen_16_sp"
            tools:text="Friday" />

        <TextView
            android:id="@+id/tv_weather_temp_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/opacity_temp_color_black"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/temp_color_black"
            android:textSize="@dimen/dimen_16_sp"
            tools:text="24 C" />


    </LinearLayout>

</LinearLayout>